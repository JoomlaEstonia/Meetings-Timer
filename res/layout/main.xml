<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">

		<ScrollView
		    android:id="@+id/scrollView1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginBottom="10sp"
			    android:orientation="vertical" >

			    <ScrollView
			        android:id="@+id/ScrollView01"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent" >

			        <LinearLayout
			            android:id="@+id/LinearLayout02"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent" >

			            <TextView
			                android:id="@+id/EditText01"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="10dp"
			                android:layout_marginTop="10dp"
			                android:layout_weight="1"
			                android:cursorVisible="false"
			                android:ems="10"
			                android:hint="@string/Tarea1"
			                android:inputType="textPersonName"
			                android:text="General"
			                android:textSize="15sp" >

			                <requestFocus />

			            <TextView
			                android:id="@+id/TextView01"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginTop="14sp"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:text="General"
			                android:textAppearance="?android:attr/textAppearanceLarge" />

			            <Chronometer
			                android:id="@+id/cgeneral"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginBottom="15sp"
			                android:layout_marginTop="15sp"
			                android:layout_weight="1"
			                android:gravity="center"
			                android:text="Chronometer"
			                android:textSize="25sp" />

			        </LinearLayout>
			    </ScrollView>

			    <ScrollView
			        android:id="@+id/ScrollView02"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_weight="1" >

			        <LinearLayout
			            android:id="@+id/LinearLayout01"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent" >

			            <Button
			                android:id="@+id/startgeneral"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="Start"
			                android:textSize="15sp" />

			            <Button
			                android:id="@+id/stopgeneral"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="Stop"
			                android:textSize="15sp" />

			            <Button
			                android:id="@+id/resetgeneral"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_weight="1"
			                android:text="Reset"
			                android:textSize="15sp" />
			        </LinearLayout>
			    </ScrollView>

			    <ScrollView
			        android:id="@+id/scrollView2"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >

			        <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:orientation="vertical" >

			            <TextView
			                android:id="@+id/textView1"
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_marginTop="10sp"
			                android:gravity="center"
			                android:text="Partes"
			                android:textAppearance="?android:attr/textAppearanceLarge" />

			        </LinearLayout>

			    </ScrollView>
			</LinearLayout>

		</ScrollView>
		
	    <HorizontalScrollView android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:fillViewport="true"
                          android:scrollbars="none">
	    
		<TabWidget
		    android:id="@android:id/tabs"
		    android:layout_width="wrap_content"
		    android:layout_height="36dp" >
</TabWidget>
		</HorizontalScrollView>

		<FrameLayout
		    android:id="@android:id/tabcontent"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >

			<ScrollView
			    android:id="@+id/TMS"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" >

			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:orientation="vertical" >

			        <ScrollView
			            android:id="@+id/LB1"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent" >

			            <LinearLayout
			                android:id="@+id/LinearLayout04"
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_marginBottom="15sp"
			                android:layout_marginLeft="15sp"
			                android:layout_marginRight="40sp"
			                android:layout_marginTop="15sp" >

			                <TextView
			                    android:id="@+id/TextView03"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="Lectura"
			                    android:textAppearance="?android:attr/textAppearanceLarge" />

			                <Chronometer
			                    android:id="@+id/clectura"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="Chronometer"
			                    android:textSize="25sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/LB2"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="1" >

			            <LinearLayout
			                android:id="@+id/LinearLayout03"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent" >

			                <Button
			                    android:id="@+id/startlb"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Start"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/stoplb"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Stop"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/resetlb"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Reset"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N1.1"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent" >

			            <LinearLayout
			                android:id="@+id/LinearLayout06"
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_marginBottom="15sp"
			                android:layout_marginLeft="15sp"
			                android:layout_marginRight="40sp"
			                android:layout_marginTop="15sp" >

			                <TextView
			                    android:id="@+id/TextView04"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="N1"
			                    android:textAppearance="?android:attr/textAppearanceLarge" />

			                <Chronometer
			                    android:id="@+id/cn1"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="Chronometer"
			                    android:textSize="25sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N1.2"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="1" >

			            <LinearLayout
			                android:id="@+id/LinearLayout05"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent" >

			                <Button
			                    android:id="@+id/Button07"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Start"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button09"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Stop"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button08"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Reset"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N2.1"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent" >

			            <LinearLayout
			                android:id="@+id/LinearLayout07"
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_marginBottom="15sp"
			                android:layout_marginLeft="15sp"
			                android:layout_marginRight="40sp"
			                android:layout_marginTop="15sp" >

			                <TextView
			                    android:id="@+id/TextView05"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginTop="14sp"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="N2"
			                    android:textAppearance="?android:attr/textAppearanceLarge" />

			                <Chronometer
			                    android:id="@+id/cn2"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginTop="15sp"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="Chronometer"
			                    android:textSize="25sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N2.2"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="1" >

			            <LinearLayout
			                android:id="@+id/LinearLayout08"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent" >

			                <Button
			                    android:id="@+id/Button11"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Start"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button10"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Stop"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button12"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Reset"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N3.1"
			            android:layout_width="fill_parent"
			            android:layout_height="fill_parent" >

			            <LinearLayout
			                android:id="@+id/LinearLayout09"
			                android:layout_width="fill_parent"
			                android:layout_height="fill_parent"
			                android:layout_marginBottom="15sp"
			                android:layout_marginLeft="15sp"
			                android:layout_marginRight="40sp"
			                android:layout_marginTop="15sp" >

			                <TextView
			                    android:id="@+id/TextView06"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginTop="14sp"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="N3"
			                    android:textAppearance="?android:attr/textAppearanceLarge" />

			                <Chronometer
			                    android:id="@+id/cn3"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_marginTop="15sp"
			                    android:layout_weight="1"
			                    android:gravity="center"
			                    android:text="Chronometer"
			                    android:textSize="25sp" />
			            </LinearLayout>
			        </ScrollView>

			        <ScrollView
			            android:id="@+id/N3.2"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_weight="1" >

			            <LinearLayout
			                android:id="@+id/LinearLayout10"
			                android:layout_width="match_parent"
			                android:layout_height="match_parent" >

			                <Button
			                    android:id="@+id/Button14"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Start"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button13"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Stop"
			                    android:textSize="15sp" />

			                <Button
			                    android:id="@+id/Button15"
			                    android:layout_width="wrap_content"
			                    android:layout_height="wrap_content"
			                    android:layout_weight="1"
			                    android:text="Reset"
			                    android:textSize="15sp" />
			            </LinearLayout>
			        </ScrollView>
			    </LinearLayout>

			</ScrollView>

			<ScrollView
			    android:id="@+id/EB"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent" >

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:orientation="vertical" >

				    <ScrollView
				        android:id="@+id/EB1"
				        android:layout_width="fill_parent"
				        android:layout_height="fill_parent" >

				        <LinearLayout
				            android:id="@+id/Row1"
				            android:layout_width="fill_parent"
				            android:layout_height="fill_parent"
				            android:layout_marginBottom="15sp"
				            android:layout_marginLeft="15sp"
				            android:layout_marginRight="40sp"
				            android:layout_marginTop="15sp" >

				            <TextView
				                android:id="@+id/TextView02"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_marginTop="14sp"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:text="Estudio Biblico"
				                android:textAppearance="?android:attr/textAppearanceLarge" />

				            <Chronometer
				                android:id="@+id/chronometer1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_marginLeft="15sp"
				                android:layout_marginTop="15sp"
				                android:layout_weight="1"
				                android:gravity="right"
				                android:text="Chronometer"
				                android:textSize="25sp" />

				        </LinearLayout>
				    </ScrollView>

				    <ScrollView
				        android:id="@+id/EB2"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1" >

				        <LinearLayout
				            android:id="@+id/Row2"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent" >

				            <Button
				                android:id="@+id/start1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="Start"
				                android:textSize="15sp" />

				            <Button
				                android:id="@+id/stop1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="Stop"
				                android:textSize="15sp" />

				            <Button
				                android:id="@+id/reset1"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:text="Reset"
				                android:textSize="15sp" />
				        </LinearLayout>
				    </ScrollView>
				</LinearLayout>

			</ScrollView>

		</FrameLayout>

	</LinearLayout>
</TabHost>
